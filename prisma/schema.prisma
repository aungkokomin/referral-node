generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String?
  roleId          Int?
  referral_uuid   String   @unique
  roles           UserHasRole[] // Many-to-many relationship with Role through UserHasRole
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Role {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  users           UserHasRole[] // Many-to-many relationship with User through UserHasRole
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model UserHasRole {
  id              Int      @id @default(autoincrement())
  userId          Int
  roleId          Int
  user            User     @relation(fields: [userId], references: [id])
  role            Role     @relation(fields: [roleId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}


